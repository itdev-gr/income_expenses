---
import type { User } from '../lib/types';

interface Props {
	user: User;
}

const { user } = Astro.props;
---

<nav class="bg-white shadow-sm border-b">
	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between h-16">
			<div class="flex items-center space-x-8">
				<div class="flex space-x-4">
					<a href="/dashboard" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
						Dashboard
					</a>
					<a href="/transactions" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
						Transactions
					</a>
					{user.role === 'admin' && (
						<>
							<a href="/repeatable-payments" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
								Repeatable Payments
							</a>
							<a href="/categories" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
								Categories
							</a>
							<a href="/admin/db-check" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
								DB Check
							</a>
						</>
					)}
				</div>
			</div>
			<div class="flex items-center space-x-4">
				<span class="text-sm text-gray-600">{user.email}</span>
				<span class={`text-xs px-2 py-1 rounded-full ${
					user.role === 'admin' 
						? 'bg-purple-100 text-purple-800' 
						: 'bg-gray-100 text-gray-800'
				}`}>
					{user.role === 'admin' ? 'Admin' : 'User'}
				</span>
				<a href="/logout" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
					Logout
				</a>
			</div>
		</div>
	</div>
</nav>
